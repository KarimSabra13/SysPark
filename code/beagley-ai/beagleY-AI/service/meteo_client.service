[Unit]
Description=Client météo pour parking-server
After=network-online.target simple_broker.service mqtt_bridge.service
Wants=network-online.target simple_broker.service mqtt_bridge.service

[Service]
Type=simple
WorkingDirectory=/opt/edgeai-gst-apps/serveur
ExecStart=/opt/edgeai-gst-apps/venv/bin/python meteo_client.py
Restart=always
RestartSec=5
Environment="PYTHONUNBUFFERED=1"

[Install]
WantedBy=multi-user.target

